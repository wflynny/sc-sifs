bootstrap: docker
from: debian:buster-slim

%help
    CellRanger 4.0.0 executables

    Run with
    > singularity run <image-name> cellranger <sub-command>

%labels
    Version 1.0.0
    Maintainer Bill Flynn, bill.flynn@jax.org

%environment
    CELLRANGER_HOME="/opt/cellranger-4.0.0"
    CR_EXEC="${CELLRANGER_HOME}/bin"
    CR_PY="${CELLRANGER_HOME}/external/anaconda/bin/"    
    CR_EXT="${CELLRANGER_HOME}/external/"
    export PATH="${CR_EXEC}:${CR_PY}:${CR_EXT}:$PATH"

%post
    set -eu
    
    apt-get update && \
        apt-get -y upgrade
    apt-get -y install wget \
        ca-certificates \
        locales
    rm -rf /var/lib/apt/lists/*

    # locale fix
    echo "LC_ALL=en_US.UTF-8" >> /etc/environment
    echo "en_US.UTF-8 UTF-8" >> /etc/locale.gen
    echo "LANG=en_US.UTF-8" > /etc/locale.conf
    locale-gen en_US.UTF-8

    mkdir -p /opt/ && cd /opt/

    wget -nv -O cellranger-4.0.0.tar.gz "https://singlecell-software.s3-far.jax.org/cellranger-4.0.0.tar.gz"
    wget -nv -O cellranger-4.0.0.tar.gz.sha1 "https://singlecell-software.s3-far.jax.org/cellranger-4.0.0.tar.gz.sha1"
    sha1sum --status -c cellranger-4.0.0.tar.gz.sha1

    tar -zxf cellranger-4.0.0.tar.gz && rm cellranger-4.0.0.tar.gz
    rm -r cellranger-4.0.0/external/cellranger_tiny_*

%runscript
    exec cellranger "$@"
